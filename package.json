{
  "name": "glimmerized",
  "version": "0.1.0",
  "description": "A colour theme by Ross Churchley",
  "type": "module",
  "main": "glimmerized.js",
  "scripts": {
    "build": "npm run build:pkg && npm run build:preview",
    "build:pkg": "esbuild glimmerized.js --bundle --minify --format=esm --outfile=glimmerized.min.js",
    "build:preview": "esbuild preview/preview.jsx --bundle --outfile=preview/preview.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rchurchley/glimmerized.git"
  },
  "author": "Ross Churchley",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rchurchley/glimmerized/issues"
  },
  "homepage": "https://github.com/rchurchley/glimmerized#readme",
  "dependencies": {
    "culori": "^2.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.13.15",
    "mustache": "^4.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
